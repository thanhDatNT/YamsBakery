<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Yams" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/lightPink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->

        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">@color/primary</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/inactive</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">@color/inactive</item>
    </style>
    <style name="RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="colorControlNormal">@color/inactive</item>
        <item name="colorControlActivated">@color/startRating</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>

    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorAccent">@color/primary</item>                   <!--header background-->
        <item name="android:windowBackground">@color/white</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/primary</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/primary</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/primary</item>    <!--days of the week-->
    </style>


</resources>