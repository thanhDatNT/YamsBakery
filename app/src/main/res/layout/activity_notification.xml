<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.NotificationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_heading_gradient"
        android:gravity="center"
        android:elevation="4dp"
        android:paddingHorizontal="@dimen/pad"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvBackHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/textHeader"
            android:textStyle="bold"
            android:text="@string/noti_profile" />

        <ImageView
            android:id="@+id/imvEmptyNotify"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/ic_delete" />


    </LinearLayout>

    <ListView
        android:id="@+id/lvNotification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:dividerHeight="0dp"
        android:layout_marginTop="@dimen/mTop"
        android:paddingHorizontal="@dimen/pad"/>

</LinearLayout>