<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/layoutFavourite">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="16dp"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="@dimen/pad">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_product"
            android:padding="@dimen/pad"
            android:gravity="center_vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="0.35"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="20dp"
                android:elevation="2dp">
                <ImageView
                    android:id="@+id/imvThumb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_cake" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.65"
                android:orientation="vertical"
                android:layout_marginStart="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/macaroon"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/title"
                        android:textStyle="bold" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:cardCornerRadius="12dp"
                        android:elevation="2dp"
                        android:translationZ="2dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginEnd="2dp">

                        <CheckBox
                            android:id="@+id/chkLike"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/ic_like"
                            android:button="@null"
                            android:checked="true"
                            android:layout_gravity="center"
                            android:stateListAnimator="@animator/anim_like"
                            />
                        <ImageView
                            android:id="@+id/imvAddFavorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_favorite_border" />

                        <ImageView
                            android:id="@+id/imvAddedFavorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:visibility="gone"
                            app:srcCompat="@drawable/ic_favorite_active" />


                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="6dp">
                    <ImageView
                        android:id="@+id/imvTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_tag"
                        android:layout_marginEnd="3dp"/>

                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="55000Ä‘"
                        android:textSize="@dimen/textContent"
                        android:layout_marginStart="2dp"
                        android:textColor="@color/primary"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/txtOldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60000"
                        android:textSize="14sp"
                        android:visibility="invisible"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/inactive"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txtDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:text="@string/Description"
                    android:textColor="@color/inactive"/>
                <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:weightSum="10">
                   <TextView
                       android:id="@+id/txtRating"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="8"
                       android:text="4.5"
                       android:textSize="16sp"
                       android:gravity="end"
                       android:drawableEnd="@drawable/ic_star"
                       android:drawablePadding="4dp"/>

                   <TextView
                       android:id="@+id/txtQuantity"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="2"
                       android:gravity="end"
                       android:layout_marginEnd="20dp"
                       android:text="@string/quantity"
                       android:textSize="16sp"/>
               </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>