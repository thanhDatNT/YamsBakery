<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:elevation="4dp"
        app:cardCornerRadius="@dimen/cornerRadius"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/bg_product"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
          >
            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="20dp"
                android:layout_marginStart="10dp"
                android:elevation="2dp">
                <ImageView
                    android:id="@+id/imvThumb"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_cake" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/macaroon"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/title"
                    android:textStyle="bold" />


                    <TextView
                        android:id="@+id/txtPrice"
                        android:drawableStart="@drawable/ic_tag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="5dp"
                        android:text="@string/prices"
                        android:textSize="@dimen/textContent"
                        android:textColor="@color/primary"
                        android:textStyle="bold"/>


                    <TextView
                        android:id="@+id/txtDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/textContent"
                        android:paddingTop="5dp"
                        android:text="@string/Description"
                        android:textColor="@color/inactive"/>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:paddingTop="5dp"
                   android:weightSum="10">
                   <TextView
                       android:id="@+id/txtRating"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="8"
                       android:text="4.5"
                       android:textSize="16sp"
                       android:gravity="end"
                       android:drawableEnd="@drawable/ic_star"
                       android:drawablePadding="4dp"/>

                   <TextView
                       android:id="@+id/txtQuantity"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="2"
                       android:gravity="end"
                       android:layout_marginEnd="20dp"
                       android:text="@string/quantity"
                       android:textSize="16sp"/>
               </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end|top"
            android:layout_marginEnd="8dp"
            android:padding="12dp"
            app:cardCornerRadius="12dp"
            android:elevation="2dp"
            android:layout_margin="10dp"
            android:translationZ="2dp">
            <ImageView
                android:id="@+id/imvAddedFavorite"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_favorite_active" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</LinearLayout>