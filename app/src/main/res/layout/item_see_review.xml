<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingVertical="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp">
            <ImageView
                android:id="@+id/imvReviewAva"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/img_logo_pink"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/txtNameReview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Như Quỳnh"
                android:gravity="left|center"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:textSize="16sp"/>
            <RatingBar
                android:id="@+id/rtbSeeReviewItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:theme="@style/RatingBar"
                android:numStars="5"
                android:rating="4.5"
                android:stepSize="0.1"
                android:isIndicator="true"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:transformPivotX="0dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtReviewText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_review"
        android:textSize="16sp"
        android:textColor="@color/textColor"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-28dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cornerRadius"
        android:layout_marginLeft="70dp"
        android:layout_marginVertical="5dp">
        <ImageView
            android:id="@+id/imvReviewImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_mango_cake"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="70dp">
        <TextView
            android:id="@+id/txtSizeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/size"
            android:layout_marginRight="2dp"
            android:textColor="@color/inactive"
            android:textSize="13sp"/>
        <TextView
            android:id="@+id/txtSizeReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/size_m"
            android:textColor="@color/inactive"
            android:textSize="13sp"/>
    </LinearLayout>
