<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".Activities.SearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_heading_gradient"
        android:gravity="center"
        android:elevation="4dp"
        android:paddingHorizontal="@dimen/pad"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imvBackHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            app:srcCompat="@drawable/ic_arrow_back" />

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:ems="10"
            android:padding="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="6dp"
            android:background="@drawable/edittext_background"
            android:inputType="text"
            android:hint="@string/search" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/pad"
            android:orientation="vertical" >


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/mTop"
                android:text="Tìm kiếm gần đây"
                android:textStyle="bold"
                android:textColor="@color/textColor"
                android:textSize="18sp"/>

            <GridView
                android:id="@+id/gvNearlySearch"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="8dp"
                android:numColumns="2"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đề xuất"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/mTop"
                android:layout_marginBottom="@dimen/mTop"/>

            <GridView
                android:id="@+id/gvSuggestSearch"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="8dp"
                android:numColumns="2"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>