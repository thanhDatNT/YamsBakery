<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.SettingChangePWActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarChangePwd"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@drawable/ic_back_pink"
        app:contentInsetStartWithNavigation="0dp"
        android:layout_marginStart="-1dp"
        android:layout_marginBottom="10dp"
        android:elevation="2dp"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ChangePwd"
            android:textColor="@color/primary"
            android:textSize="@dimen/textHeader"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginEnd="34dp"/>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:hintEnabled="true"
            app:boxBackgroundMode="none"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/primary">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtOldPW"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="@string/oldPW"
                android:background="@drawable/bg_edittext_lightpink"
                android:textColor="@color/primary"
                android:inputType="textPassword"
                android:textSize="18sp"
                android:paddingVertical="0dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/usernameWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:passwordToggleEnabled="true"
            app:hintEnabled="true"
            app:boxBackgroundMode="none"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/primary"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtNewPW"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="@string/newPW"
                android:background="@drawable/bg_edittext_lightpink"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:inputType="textPassword"
                android:paddingVertical="0dp"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:passwordToggleEnabled="true"
            app:hintEnabled="true"
            app:boxBackgroundMode="none"
            app:startIconDrawable="@drawable/ic_lock"
            app:startIconTint="@color/primary"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtRetypePW"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:hint="@string/retypePW"
                android:background="@drawable/bg_edittext_lightpink"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:inputType="textPassword"
                android:paddingVertical="0dp"/>

        </com.google.android.material.textfield.TextInputLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnConfirmPwChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/bg_button_gradient"
            android:paddingHorizontal="@dimen/padHorizon"
            android:text="@string/Confirm"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/buttonTextSize"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>