<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:elevation="3dp"
    app:cardBackgroundColor="@color/lightPink"
    android:background="@drawable/edittext_bg_border"
    app:cardCornerRadius="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="@dimen/pad">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="@dimen/padHorizon"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="Notification"
                android:layout_weight="0.8"
                android:textColor="@color/textColor"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/imgCategory"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.2"
                android:src="@drawable/ic_new_releases_notify"/>
        </LinearLayout>

</androidx.cardview.widget.CardView>