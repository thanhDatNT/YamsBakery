<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="2dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        android:elevation="2dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@drawable/bg_product"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="20dp"
                android:elevation="2dp"
                android:layout_marginLeft="10dp"
                >
                <ImageView
                    android:id="@+id/imvThumb"
                    android:layout_width="150dp"
                    android:layout_height="130dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/cake_chocolate" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:orientation="vertical"
                android:paddingLeft="5dp">

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/macaroon"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/prices"
                        android:layout_margin="5dp"
                        android:textSize="16sp"

                        android:textColor="@color/primary"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/txtOldPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/Old_prices"
                        android:textSize="16sp"

                        android:textColor="@color/inactive"
                        android:textStyle=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/txtDescription"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="@string/Discription"

                        android:textColor="@color/inactive"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/txtRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|bottom"
                            android:layout_marginEnd="6dp"
                            android:text="@string/Rating"
                            android:textSize="14sp"
                            android:drawableEnd="@drawable/ic_star"
                            android:drawablePadding="4dp"/>

                            <TextView
                                android:id="@+id/txtQuantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/quantity"/>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="end|top"
            android:layout_marginEnd="8dp"
            android:padding="12dp"
            app:cardCornerRadius="12dp"
            android:elevation="2dp"
            android:translationZ="2dp">

            <ImageView
                android:id="@+id/imvAddedFavorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                app:srcCompat="@drawable/ic_favorite_active" />
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>