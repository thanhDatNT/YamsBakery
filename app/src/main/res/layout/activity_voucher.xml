<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    >
    <!--header-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarVoucher"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@drawable/ic_back_pink"
        app:contentInsetStartWithNavigation="0dp"
        android:layout_marginStart="-5dp"
        android:layout_marginBottom="10dp"
        android:elevation="2dp"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/yams_voucher"
            android:textSize="@dimen/textHeader"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginEnd="46dp"/>
    </androidx.appcompat.widget.Toolbar>
    <!--    end header-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        android:padding="10dp"
        android:layout_marginTop="10dp">
        <EditText
            android:id="@+id/edtVoucher"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="6"
            android:focusable="false"
            android:hint="@string/enter_coupons"
            android:gravity="center"
            android:background="@color/lightPink"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnApply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="4dp"
            android:text="@string/apply"
            android:textSize="@dimen/buttonTextSize"
            android:gravity="center"
            android:background="@drawable/bg_button_gradient"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="bold"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lvVoucher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:divider="@null"
        android:layout_marginTop="10dp"/>

</LinearLayout>