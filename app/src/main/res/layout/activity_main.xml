<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgLayout"
    tools:context=".Activities.MainActivity">

<!--Elevation is an attr to make view float (Z-Axis)-->
<!--    Start Header-->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHello"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.8"
                android:text="Chào buổi sáng, Quỳnh!"
                android:textColor="@color/primary"
                android:textSize="18sp" />

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:layout_gravity="center_vertical">

                <ImageButton
                    android:id="@+id/imbCartHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    app:srcCompat="@drawable/ic_cart" />

                <TextView
                    android:id="@+id/tvTotalCartItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:paddingHorizontal="5dp"
                    android:background="@drawable/textview_dot"
                    android:layout_gravity="end"
                    android:layout_marginEnd="2dp"
                    android:textColor="@color/textColor"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:layout_gravity="center_vertical">

                <ImageButton
                    android:id="@+id/imbNotificationHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    app:srcCompat="@drawable/ic_notifications" />

                <TextView
                    android:id="@+id/tvNotificationDot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/textview_dot"
                    android:layout_gravity="end"
                    android:layout_marginEnd="2dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/textColor"/>
            </FrameLayout>

        </LinearLayout>


        <EditText
            android:id="@+id/edtSearchHome"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:ems="10"
            android:padding="8dp"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="6dp"
            android:background="@drawable/edittext_background"
            android:inputType="textPersonName"
            android:hint="@string/search" />

    </LinearLayout>

<!--    End header-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:orientation="vertical" >

<!--            Automatic Slider Banner-->
            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSliderHome"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="132dp"
                app:sliderAnimationDuration="300"
                app:sliderAutoCycleDirection="right"
                app:sliderIndicatorAnimationDuration="300"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="8dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="1dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="@color/primary"
                app:sliderIndicatorUnselectedColor="@color/inactive"
                app:sliderScrollTimeInSec="3"
                app:sliderStartAutoCycle="true"/>


<!--            Grid Categories-->
            <GridView
                android:id="@+id/gvCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="4"
                android:layout_marginTop="@dimen/mTop"/>

<!--            New Products Recycler View-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mTop"
                android:text="@string/newProduct"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvNewProducts"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/mTop"/>

            <!--            Popular Recycler View-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mTop"
                android:text="@string/popular"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvPopular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/mTop"/>

            <!--            Promotion Recycler View-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mTop"
                android:text="@string/promo"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvPromotion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/mTop"/>

            <!--            Suggestion Recycler View-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/mTop"
                android:text="@string/suggest"
                android:textColor="@color/textColor"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvSuggestion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/mBot"
                android:layout_marginTop="@dimen/mTop"/>
        </LinearLayout>
    </ScrollView>

<!--    Bottom Navigation-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp"
                android:orientation="horizontal"
                android:elevation="4dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

<!--    Home Navigation -->
                <LinearLayout
                    android:id="@+id/homeNav"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.2"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:src="@drawable/ic_account_inactive"
                        app:tint="@color/primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/home"
                        android:gravity="center"
                        android:textColor="@color/primary"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!--    Favorite Navigation -->
                <LinearLayout
                    android:id="@+id/favoriteNav"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.2"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_favorite_inactive" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/favorite"
                        android:gravity="center"
                        android:textColor="@color/inactive"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!--    Diet Navigation -->
                <LinearLayout
                    android:id="@+id/dietNav"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.2"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_diet_inactive" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/diet"
                        android:gravity="center"
                        android:textColor="@color/inactive"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!--    Feed Navigation -->
                <LinearLayout
                    android:id="@+id/feedNav"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.2"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_feed_inactive" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/feed"
                        android:gravity="center"
                        android:textColor="@color/inactive"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!--   Profile Navigation -->
                <LinearLayout
                    android:id="@+id/profileNav"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.2"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_account_inactive" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/profile"
                        android:gravity="center"
                        android:textColor="@color/inactive"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>