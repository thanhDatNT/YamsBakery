<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/pad"
    android:orientation="vertical"
    tools:context=".Activities.LoginActivity"
    android:id="@+id/layoutContainerLogin">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/mTop"
        app:srcCompat="@drawable/img_logo_pink" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_prim_color"
        android:textSize="20sp"
        android:layout_marginTop="22dp"
        android:padding="@dimen/pad"
        android:hint="@string/email"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_border_prim_color"
        android:textSize="20sp"
        android:layout_marginTop="22dp"
        android:padding="@dimen/pad"
        android:hint="@string/password"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signIn"
        android:layout_marginTop="48dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/buttonTextSize"
        android:paddingHorizontal="@dimen/padHorizon"
        android:textAllCaps="false"
        android:background="@drawable/button_bg_gradient"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mTop"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvForgotPass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/forgotPW"
            android:textColor="@color/primary"
            android:gravity="end"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:id="@+id/tvSignUpLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="@string/signUp"
            android:textColor="@color/primary"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/mTop"
        android:gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/inactive"
            android:layout_weight="0.3" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="@string/mediaLogin" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/inactive"
            android:layout_weight="0.3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/mTop"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imbFacebookLogin"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@color/white"
            app:srcCompat="@drawable/img_facebook" />

        <ImageButton
            android:id="@+id/imbGoogleLogin"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:background="@color/white"
            app:srcCompat="@drawable/img_google" />
    </LinearLayout>
</LinearLayout>