        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/RatingBar"
            android:numStars="5"
            android:rating="4.9"
            android:stepSize="0.1"
            android:isIndicator="true"
            android:transformPivotX="0dp"
            android:scaleX="0.6"
