<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/layoutProductDiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp"
        android:elevation="2dp">
        <LinearLayout
            android:background="@drawable/bg_product"
            android:layout_width="match_parent"
            android:weightSum="10"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="115dp"
                android:layout_gravity="center_vertical"
                app:cardCornerRadius="20dp"
                android:elevation="2dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/imvThumb"
                    android:layout_width="135dp"
                    android:layout_height="115dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_cake" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_weight="6.5"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_marginStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.9"
                        android:layout_gravity="center_vertical"
                        android:text="@string/sumerPudding"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/textColor"/>
                    <androidx.cardview.widget.CardView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:cardCornerRadius="12dp"
                        android:elevation="2dp"
                        android:translationZ="1.5dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginEnd="3dp">

                        <CheckBox
                            android:id="@+id/chkLike"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/ic_like"
                            android:button="@null"
                            android:checked="true"
                            android:layout_gravity="center"
                            android:stateListAnimator="@animator/anim_like" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        >
                        <TextView
                            android:id="@+id/txtPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="@string/price"

                            android:textSize="16sp"
                            android:textColor="@color/primary"/>

                        <TextView
                            android:id="@+id/txtOldPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="60000"
                            android:textColor="@color/inactive"
                            android:textSize="14sp"
                            android:visibility="invisible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical">
                        <TextView
                            android:id="@+id/txtRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="6dp"
                            android:text="4.5"
                            android:textColor="@color/inactive"
                            android:textSize="14sp"
                            android:drawableEnd="@drawable/ic_star"
                            android:drawablePadding="4dp"/>

                        <TextView
                            android:id="@+id/txtQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/quantity"
                            android:textColor="@color/inactive"

                            />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">
                    <TextView
                        android:id="@+id/txtContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="@string/pudding"
                        android:textSize="14sp"
                        android:textColor="@color/inactive"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>