<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!--header-->
    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:elevation="2dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imbBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="68dp"
            android:layout_toStartOf="@+id/txtHeader"
            android:background="@color/white"
            android:src="@drawable/ic_back_pink" />

        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="120dp"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:text="@string/choose_bank"
            android:textColor="@color/primary"
            android:textSize="@dimen/textHeader"
            android:textStyle="bold" />

    </RelativeLayout>
    <!--    end header-->

    <androidx.appcompat.widget.SearchView
        android:id="@+id/svSearchHome"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="12dp"
        android:queryBackground="@null"
        android:queryHint="@string/search"
        android:iconifiedByDefault="false"
        app:searchIcon="@drawable/ic_search"
        android:background="@drawable/bg_lightpink"/>

    <ListView
        android:id="@+id/lvBank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:listSelector="@color/lightPink"/>

</LinearLayout>